{
	"name": "svelte-weatherflow",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "yarn build:weatherflow-dgram && concurrently --kill-others \"npm:dev:*\"",
		"dev:weatherflow-dgram": "yarn build:weatherflow-dgram --watch",
		"dev:svelte": "vite dev --host",
		"build": "vite build",
		"build:weatherflow-dgram": "esbuild src/lib/server/weatherflow-dgram.ts --bundle --outfile=dist/weatherflow.js --platform=node --format=esm",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --plugin-search-dir . --check .",
		"format": "prettier --plugin-search-dir . --write ."
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^1.0.0",
		"@sveltejs/adapter-node": "^1.0.0",
		"@sveltejs/kit": "^1.0.0",
		"concurrently": "^7.6.0",
		"prettier": "^2.8.0",
		"prettier-plugin-svelte": "^2.8.1",
		"svelte": "^3.54.0",
		"svelte-check": "^2.9.2",
		"svelte-preprocess": "^5.0.0",
		"tslib": "^2.4.1",
		"typescript": "^4.9.3",
		"vite": "^4.0.0"
	},
	"type": "module",
	"dependencies": {
		"socket.io": "^4.5.4",
		"socket.io-client": "^4.5.4"
	}
}
